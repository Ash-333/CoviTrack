<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:strokeColor="@color/cardBackground"
        app:strokeWidth="1dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="-4dp"
        app:cardElevation="8dp">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@color/white">
        <!--app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"-->

        <ImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-15dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/virus" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:src="@drawable/virus" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_toStartOf="@+id/image2"
            android:src="@drawable/virus" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/covid_19_tracker"
                android:textColor="@color/textColor2"
                android:textSize="@dimen/titleSize2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/country"
                android:layout_marginTop="8dp"
                android:drawablePadding="10dp"
                android:textColor="@color/textColor2"
                android:textSize="28sp"
                android:textStyle="bold"
                app:drawableRightCompat="@drawable/ic_drop_down"
                android:text="@string/nepal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/updateDate"
                android:layout_marginTop="4dp"
                android:textColor="@color/textColor2"
                android:textSize="@dimen/textSize"
                tools:text="Last updated at 13 May,2021"
                />

        </LinearLayout>

        <org.eazegraph.lib.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            android:padding="4dp"
            app:egInnerPaddingColor="@color/white"
            app:egLegendHeight="0sp"
            app:egLegendTextSize="0sp"
            app:egUsePieRotation="true"
            app:egValueTextSize="0sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="24dp"
            android:padding="4dp"
            android:layout_toStartOf="@+id/pieChart"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@color/blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/active"
                    android:textSize="@dimen/textSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@color/yellow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/confirm"
                    android:textSize="@dimen/textSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@color/green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/recovered"
                    android:textSize="@dimen/textSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@color/red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/death"
                    android:textSize="@dimen/textSize" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

   <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
      <!-- android:layout_marginLeft="-5dp"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"-->


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp">
        <!--app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"-->

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/cardWidth"
            android:layout_height="@dimen/cardWidth2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            android:padding="12dp"
            app:strokeColor="@color/cardBackground"
            app:strokeWidth="1dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_active" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/active"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalActive"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="18dp"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/titleSize3"
                    android:textStyle="bold"
                    tools:text="30194" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/cardWidth"
            android:layout_height="@dimen/cardWidth2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:padding="12dp"
            app:cardCornerRadius="8dp"
            app:strokeColor="@color/cardBackground"
            app:cardElevation="4dp"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_confirmed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/confirm"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalConfirm"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/textColor2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="30194" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/todayConfirm"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/textColor2"
                    android:textSize="18sp"
                    tools:text="(+5366)" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/cardWidth"
            android:layout_height="@dimen/cardWidth2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/cardBackground"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_rec" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/recovered"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalRecovered"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/titleSize3"
                    android:textStyle="bold"
                    tools:text="30194" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/todayRecovered"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/titleSize1"
                    tools:text="(+5366)" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/cardWidth"
            android:layout_height="@dimen/cardWidth2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/cardBackground"

            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_death" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/death"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalDeath"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/titleSize3"
                    android:textStyle="bold"
                    tools:text="30194" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/todayDeath"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/titleSize1"
                    tools:text="(+5366)" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/cardWidth"
            android:layout_height="@dimen/cardWidth2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/cardBackground"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_test" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/total_test"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalTest"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/titleSize3"
                    android:textStyle="bold"
                    tools:text="30194" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/cardWidth"
            android:layout_height="@dimen/cardWidth2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/cardBackground"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_pop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/total_population"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalPopulation"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/titleSize3"
                    android:textStyle="bold"
                    tools:text="30194" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </GridLayout>
           <com.google.android.material.button.MaterialButton
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="12dp"
               android:layout_marginBottom="12dp"
               android:text="@string/about_us"
               android:textAllCaps="false"
               android:layout_marginStart="12dp"
               android:layout_marginEnd="12dp"
               app:cornerRadius="24dp"
               android:id="@+id/aboutUs"
               android:textColor="#000000"
               android:textStyle="bold"
               android:elevation="8dp"
               />
       </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>